<UserControl
	x:Class="nVentive.Umbrella.Views.UI.Samples.Content.UITests.GridView.GridView_ItemTemplateConverter" 
	xmlns:controls="using:nVentive.Umbrella.Views.UI.Samples.Controls"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:nVentive.Umbrella.Views.UI.Samples.Content.UITests"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:u="using:nVentive.Umbrella.Views.Controls"
	xmlns:uc="using:nVentive.Umbrella.Views.Converters.Legacy"
	xmlns:uBehaviors="using:nVentive.Umbrella.Views.Behaviors"
	xmlns:ios="http://nventive.com/ios"
	xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:android="http://nventive.com/android"
	mc:Ignorable="d ios android"
	d:DesignHeight="2000"
	d:DesignWidth="400">
	
	
	
	
	<UserControl.Resources>
		<uc:NullorBoolToCustomValueConverter x:Key="MyConverter"
											 NotNullorTrueValue="{StaticResource MyTemplate1}"
											 NullorFalseValue="{StaticResource MyTemplate2}" />

		<DataTemplate x:Key="MyTemplate1">
			<Border Background="White"
					Height="100"
					Width="100">

				<TextBlock Text="{Binding [Name]}"/>
			</Border>
		</DataTemplate>

		<DataTemplate x:Key="MyTemplate2">
			<Border Background="White"
					Height="100"
					Width="100">

				<TextBlock Text="{Binding [Name]}"/>
			</Border>
		</DataTemplate>
		
		</UserControl.Resources>

	<controls:SampleControl SampleDescription="Description for sample of GridView_ItemTemplateConverter">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				<Border Background="Red" HorizontalAlignment="Stretch">
					<GridView ItemsSource="{Binding [SampleItems]}"
							  ItemTemplate="{Binding [MyBool], Converter={StaticResource MyConverter}}"/>
				</Border>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>